# ---------- Google Gemini API ----------
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-pro
GEMINI_TEMPERATURE=0.8
GEMINI_MAX_TOKENS=8192
GEMINI_TOP_P=0.95
GEMINI_TOP_K=40

# ---------- ElevenLabs TTS API ----------
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_cloned_voice_id_here
ELEVENLABS_MODEL_ID=eleven_multilingual_v2
ELEVENLABS_OUTPUT_FORMAT=pcm_44100
ELEVENLABS_STABILITY=0.5
ELEVENLABS_SIMILARITY_BOOST=0.75
ELEVENLABS_STYLE=0.4

# ---------- RAWG.io Game Database API ----------
# Sign up free at https://rawg.io/apidocs
RAWG_API_KEY=your_rawg_api_key_here
RAWG_BASE_URL=https://api.rawg.io/api
RAWG_PAGE_SIZE=20

# ---------- PostgreSQL (pgvector) ----------
# These must match the docker-compose.yml service configuration.
POSTGRES_HOST=postgres_youtube
POSTGRES_PORT=5433
POSTGRES_DB=youtube_rag
POSTGRES_USER=yt_user
POSTGRES_PASSWORD=change_me_to_a_strong_password
EMBEDDING_DIMENSION=768

# ---------- Slack (Human-in-the-Loop) ----------
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_APPROVAL_CHANNEL=#youtube-approvals
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# ---------- n8n Orchestration ----------
N8N_BASE_URL=http://n8n_youtube:5678
N8N_WEBHOOK_APPROVE_SCRIPT=/webhook/approve-script
N8N_WEBHOOK_APPROVE_AUDIO=/webhook/approve-audio

# ---------- n8n Internal (used by docker-compose) ----------
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_me_n8n_password
N8N_ENCRYPTION_KEY=change_me_to_random_string_32_chars

# ---------- General ----------
LOG_LEVEL=INFO
TZ=Asia/Riyadh
