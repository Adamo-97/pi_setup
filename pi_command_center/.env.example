# --- Timezone ---
TZ=Asia/Riyadh

# --- Homepage Dashboard ---
HOMEPAGE_PORT=3010

# --- Uptime Kuma ---
UPTIME_KUMA_PORT=3001

# --- Raspberry Pi Host IP (for Homepage widgets) ---
HOST_IP=192.168.1.100

# --- Slack Webhook (for Uptime Kuma emergency alerts) ---
# Create at: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# --- Weekend Batch Notification Channel ---
# Separate channel/webhook for non-urgent publishing approvals
SLACK_BATCH_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/BATCH/WEBHOOK

# --- n8n Endpoints (for Homepage status widgets) ---
N8N_YOUTUBE_URL=http://192.168.1.100:5678
N8N_TIKTOK_URL=http://192.168.1.100:5679
N8N_INSTAGRAM_URL=http://192.168.1.100:5680
N8N_X_URL=http://192.168.1.100:5681

# --- Pi-hole Endpoint ---
PIHOLE_URL=http://192.168.1.100:8080
PIHOLE_API_KEY=your_pihole_api_key_here
