# --- Timezone ---
TZ=Asia/Riyadh

# --- Homepage Dashboard ---
HOMEPAGE_PORT=3010

# --- Uptime Kuma ---
UPTIME_KUMA_PORT=3001

# --- Raspberry Pi Host IP (for Homepage widgets) ---
HOST_IP=192.168.1.100

# --- Mattermost (for Uptime Kuma emergency alerts) ---
# Use bot-youtube token or a dedicated bot-monitoring token
MATTERMOST_URL=http://192.168.1.100:8065
MATTERMOST_BOT_TOKEN=your_bot_monitoring_personal_access_token
MATTERMOST_CHANNEL_ID=your_monitoring_channel_id

# --- Weekend Batch Notification ---
# Separate channel for non-urgent publishing approvals
MATTERMOST_BATCH_CHANNEL_ID=your_batch_channel_id

# --- n8n Endpoints (for Homepage status widgets) ---
N8N_YOUTUBE_URL=http://192.168.1.100:5678
N8N_TIKTOK_URL=http://192.168.1.100:5679
N8N_INSTAGRAM_URL=http://192.168.1.100:5680
N8N_X_URL=http://192.168.1.100:5681

# --- Pi-hole Endpoint ---
PIHOLE_URL=http://192.168.1.100:8080
PIHOLE_API_KEY=your_pihole_api_key_here
