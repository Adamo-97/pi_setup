# ============================================================
# pi_instagram_stack — Environment Variables
# ============================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# ============================================================

# --- Google Gemini -------------------------------------------
GEMINI_API_KEY=                       # REQUIRED — https://aistudio.google.com/apikey
GEMINI_MODEL=gemini-2.5-pro           # Default model
GEMINI_EMBEDDING_MODEL=models/embedding-001
GEMINI_TEMPERATURE=0.8
GEMINI_MAX_TOKENS=4096

# --- ElevenLabs TTS -----------------------------------------
ELEVENLABS_API_KEY=                   # REQUIRED — https://elevenlabs.io
ELEVENLABS_VOICE_ID=                  # REQUIRED — your cloned voice ID
ELEVENLABS_MODEL=eleven_multilingual_v2

# --- News Scraping ------------------------------------------
SERPAPI_KEY=                          # OPTIONAL — for Google News; https://serpapi.com

# --- Mattermost Notifications --------------------------------
MATTERMOST_URL=http://192.168.1.100:8065
MATTERMOST_BOT_TOKEN=                  # REQUIRED — bot-instagram Personal Access Token
MATTERMOST_CHANNEL_ID=                  # REQUIRED — #pipeline-instagram channel ID

# --- Buffer (Instagram Publishing) --------------------------
BUFFER_ACCESS_TOKEN=                  # REQUIRED for auto-publish
BUFFER_PROFILE_ID=                    # Instagram profile ID in Buffer

# --- n8n Webhook Base URL -----------------------------------
N8N_WEBHOOK_BASE=http://localhost:5680/webhook

# --- PostgreSQL (Instagram RAG DB) --------------------------
DB_HOST=localhost
DB_PORT=5435
DB_NAME=instagram_rag
DB_USER=ig_user
DB_PASSWORD=ig_secure_pass_2025

# --- Postgres Docker (used by docker-compose.yml) -----------
POSTGRES_USER=ig_user
POSTGRES_PASSWORD=ig_secure_pass_2025
POSTGRES_DB=instagram_rag
