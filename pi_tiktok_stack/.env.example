# ============================================================
# pi_tiktok_stack — Environment Variables
# ============================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# ============================================================

# --- Google Gemini -------------------------------------------
GEMINI_API_KEY=                       # REQUIRED — https://aistudio.google.com/apikey
GEMINI_MODEL=gemini-2.5-pro           # Default model
GEMINI_EMBEDDING_MODEL=models/embedding-001
GEMINI_TEMPERATURE=0.8
GEMINI_MAX_TOKENS=4096

# --- ElevenLabs TTS -----------------------------------------
ELEVENLABS_API_KEY=                   # REQUIRED — https://elevenlabs.io
ELEVENLABS_VOICE_ID=                  # REQUIRED — your cloned voice ID
ELEVENLABS_MODEL=eleven_multilingual_v2

# --- News Scraping ------------------------------------------
SERPAPI_KEY=                          # OPTIONAL — for Google News; https://serpapi.com

# --- Slack Notifications ------------------------------------
SLACK_WEBHOOK_URL=                    # REQUIRED — Incoming Webhook URL

# --- Buffer (TikTok Publishing) -----------------------------
BUFFER_ACCESS_TOKEN=                  # REQUIRED for auto-publish
BUFFER_PROFILE_ID=                    # TikTok profile ID in Buffer

# --- n8n Webhook Base URL -----------------------------------
N8N_WEBHOOK_BASE=http://localhost:5679/webhook

# --- PostgreSQL (TikTok RAG DB) -----------------------------
DB_HOST=localhost
DB_PORT=5434
DB_NAME=tiktok_rag
DB_USER=tt_user
DB_PASSWORD=tt_secure_pass_2025

# --- Postgres Docker (used by docker-compose.yml) -----------
POSTGRES_USER=tt_user
POSTGRES_PASSWORD=tt_secure_pass_2025
POSTGRES_DB=tiktok_rag
