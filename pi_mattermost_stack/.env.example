# --- NVMe SSD Mount Point ---
# Change this to your actual NVMe mount path
NVME_MOUNT=/mnt/nvme

# --- Timezone ---
TZ=Asia/Riyadh

# --- PostgreSQL ---
POSTGRES_DB=mattermost
POSTGRES_USER=mm_user
POSTGRES_PASSWORD=changeme_db_password
POSTGRES_PORT=5438

# --- Mattermost ---
MATTERMOST_PORT=8065

# --- Site URL ---
# For Tailscale access, set this to your Pi's Tailscale IP:
#   MM_SITEURL=http://100.x.x.x:8065
# For LAN-only access:
#   MM_SITEURL=http://192.168.1.100:8065
MM_SITEURL=http://192.168.1.100:8065

# --- Raspberry Pi Host IP ---
HOST_IP=192.168.1.100
