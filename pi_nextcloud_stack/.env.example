# ============================================================================
# Pi Nextcloud Stack â€” Environment Variables
# ============================================================================
# Copy this file to .env and edit the values:
#   cp .env.example .env && nano .env
# ============================================================================

# --- NVMe SSD Mount Point ---
# Change this to your actual NVMe mount path
NVME_MOUNT=/mnt/nvme

# --- Timezone ---
TZ=Asia/Riyadh

# --- PostgreSQL ---
POSTGRES_DB=nextcloud
POSTGRES_USER=nc_user
POSTGRES_PASSWORD=changeme_db_password
POSTGRES_PORT=5437

# --- Nextcloud ---
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=changeme_admin_password
NEXTCLOUD_PORT=8443

# --- Domain (for Caddy auto-HTTPS) ---
# Set to your actual domain pointed to this Pi's public IP
# For local-only access, leave as-is and use http://<pi-ip>:8443 instead
NEXTCLOUD_DOMAIN=cloud.example.com

# --- Caddy Reverse Proxy ---
CADDY_HTTP_PORT=80
CADDY_HTTPS_PORT=443

# --- Raspberry Pi Host IP ---
HOST_IP=192.168.1.100

# --- Slack Webhook (for file-scan notifications) ---
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
